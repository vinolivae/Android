<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/purple_100">

    <EditText
        android:id="@+id/edit_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/purple_80"
        android:padding="20dp"
        android:hint="Insira o Peso"
        android:textColorHint="@color/purple_20"
        android:textColor="@color/purple_20"
    />
    <EditText
        android:id="@+id/edit_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/purple_80"
        android:padding="20dp"
        android:layout_below="@+id/edit_peso"
        android:hint="Insira a Altura"
        android:textColorHint="@color/purple_20"
        android:textColor="@color/purple_20"
    />
    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Calcular IMC"
        android:backgroundTint="@color/purple_80"
        android:textColor="@color/purple_20"
        android:layout_marginTop="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/edit_altura"
    />
    <ImageView
        android:id="@+id/icon_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/btn_calcular"
        android:layout_below="@+id/edit_altura"
    />
    <TextView
        android:id="@+id/view_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_calcular"
        android:layout_marginTop="30dp"
        android:text=""
        android:textColor="@color/purple_20"
        android:textSize="30sp"
        android:gravity="center"
    />

</RelativeLayout>